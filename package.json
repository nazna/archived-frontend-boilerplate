{
  "private": true,
  "license": "MIT",
  "version": "1.0.2",
  "main": "package.json",
  "name": "frontend-boilerplate",
  "description": "A boilerplate for Web frontend development",
  "homepage": "https://naoya3e.github.io/frontend-boilerplate/",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "deploy": "gh-pages -d dist",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck && npm run lint:js && npm run lint:css",
    "lint:js": "eslint --fix '**/*.{tsx,ts,js}'",
    "lint:css": "stylelint --fix '**/*.{tsx,ts,js}'",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "clean": "/bin/rm -rf node_modules && npm install"
  },
  "dependencies": {
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "@loadable/component": "^5.10.2",
    "effector": "^20.2.1",
    "effector-react": "^20.3.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "wouter": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@emotion/babel-preset-css-prop": "^10.0.17",
    "@loadable/babel-plugin": "^5.10.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/jest": "^24.0.18",
    "@types/loadable__component": "^5.10.0",
    "@types/node": "^12.7.4",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/webpack": "^4.39.1",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^10.0.0",
    "file-loader": "^4.2.0",
    "gh-pages": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.8.0",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-recommended": "^2.2.0",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0"
  },
  "author": {
    "name": "Naoya Yamashita",
    "email": "naoya3e@gmail.com",
    "url": "https://github.com/naoya3e"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naoya3e/frontend-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/naoya3e/frontend-boilerplate/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  }
}
