{
  "name": "frontend-boilerplate",
  "description": "A boilerplate for Web frontend development",
  "version": "2.0.0",
  "author": "nazna <naoya3e@gmail.com> (https://github.com/nazna)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "lint": "npm run typecheck && npm run format",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "dependencies": {
    "next": "10.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "recoil": "0.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@types/node": "15.6.0",
    "@types/react": "17.0.7",
    "husky": "6.0.0",
    "prettier": "2.3.0",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": "12.x"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nazna/frontend-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/nazna/frontend-boilerplate/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "volta": {
    "node": "12.20.0"
  }
}
