{
  "private": true,
  "license": "MIT",
  "name": "frontend-boilerplate",
  "description": "A boilerplate for Web frontend development",
  "version": "1.0.4",
  "homepage": "https://febp.now.sh/",
  "main": "package.json",
  "scripts": {
    "serve": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
