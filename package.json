    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.8.2",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^3.7.3",
    "webpack": "^4.41.4",
