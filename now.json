{
  "version": 2,
  "name": "frontend-boilerplate",
  "alias": "febp.now.sh",
  "regions": ["hnd1"],
  "github": { "silent": true },
  "builds": [{ "src": "package.json", "use": "@now/static-build" }],
  "routes": [
    {
      "src": "/images/(.*)",
      "dest": "/images/$1",
      "headers": { "cache-control": "immutable, s-maxage=31536000" }
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1",
      "headers": { "cache-control": "immutable, s-maxage=31536000" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
